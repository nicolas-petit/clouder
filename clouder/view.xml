        <menuitem action="action_clouder_save_form" id="menu_action_clouder_save_form" parent="menu_clouder_clouder"/>

        <record id="view_clouder_save_form" model="ir.ui.view">
            <field name="name">clouder.save.form</field>
            <field name="model">clouder.save</field>
            <field name="arch" type="xml">
                <form string="Save" version="7.0">
                    <group col="4">
                      <field name="name"/>
                      <field name="backup_id"/>
                      <field name='comment'/>
                      <field name="now_bup"/>
                      <field name="date_expiration"/>
                    </group>
                    <notebook>
                        <page string="Container">
                            <group col="4">
                                <field name="container_id"/>
                                <field name="container_fullname"/>
                                <field name="container_app"/>
                                <field name="container_img"/>
                                <field name="container_img_version"/>
                                <field name="container_ports"/>
                                <field name="container_options"/>
                                <field name="container_links"/>
                                <field name="container_volumes_comma"/>
                                <field name="container_volumes"/>
                            </group>  
                       </page>
                        <page string="Base" attrs="{'invisible':[('base_fullname','=',False)]}">
                            <group col="4">
                                <field name="base_id"/>
                                <field name="base_fullname"/>
                                <field name="base_title"/>
                                <field name="base_admin_name"/>
                                <field name="base_admin_password"/>
                                <field name="base_admin_email"/>
                                <field name="base_poweruser_name"/>
                                <field name="base_poweruser_password"/>
                                <field name="base_poweruser_email"/>
                                <field name="base_build"/>
                                <field name="base_test"/>
                                <field name="base_lang"/>
                                <field name="base_autosave"/>
                                <field name="base_options"/>
                                <field name="base_links"/>
                            </group>  
                       </page>
                    </notebook>
                    <group col="4">
                      <separator string="Restore"/>
                      <newline/>
                      <field name="environment"/>
                      <newline/>
                      <field name="container_suffix" attrs="{'invisible':[('base_id','!=',False)]}"/>
                      <field name="container_server" attrs="{'invisible':[('base_id','!=',False)]}"/>
                      <field name="base_container_suffix" readonly="1" attrs="{'invisible':[('base_id','=',False)]}"/>
                      <field name="base_container_server" readonly="1" attrs="{'invisible':[('base_id','=',False)]}"/>
                      <field name="base_name" attrs="{'invisible':[('base_id','=',False)]}"/>
                      <field name="base_domain" attrs="{'invisible':[('base_id','=',False)]}"/>
                      <field name="restore_to_environment_id"/>
                      <newline/>
                      <field name="container_restore_to_suffix"/>
                      <field name="container_restore_to_server_id"/>
                      <field name="base_restore_to_name" attrs="{'invisible':[('base_id','=',False)]}"/>
                      <field name="base_restore_to_domain_id" attrs="{'invisible':[('base_id','=',False)]}"/>
                    </group>
                    <button name="restore" string="Restore" type="object"/>
                    <field name="job_ids" colspan="4"/>
                </form>
            </field>
        </record>
        <record id="view_clouder_save_tree" model="ir.ui.view">
            <field name="name">clouder.save.tree</field>
            <field name="model">clouder.save</field>
            <field name="arch" type="xml">
